{
    "compilerOptions": {
      "outDir": "./../../dist/app",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2017", "dom"]
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "./**/*.test.ts", "./**/*.test.tsx"]
  }
  